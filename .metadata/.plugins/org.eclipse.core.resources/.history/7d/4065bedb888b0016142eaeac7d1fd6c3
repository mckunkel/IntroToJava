package ch14.labs;

public class Person {
	private String name;
	private int age;

	public Person(String n, int a) throws BadAgeException {
		if (n == null || n.equals("")) {
			throw new InvalidDataException();
		}
		name = n;
	}

	public String toString() {
		return "Person [name=" + name + "]";
	}
}
